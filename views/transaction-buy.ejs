<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %>
    <title>Modal Receh - Dashboard</title>
</head>

<body>

    <%- include('partials/loading.ejs') %>

    <header class="header-area header-sticky">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/" class="logo">
                            <img src="assets/images/modal-receh.png" alt="" style="width: 120px;height: 60px;">
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li><a href="/dashboard" class="active">Dashboard</a></li>
                            <li><a href="/portfolio">Portfolio</a></li>
                            <li><a href="/profile"><%= username %></a></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>   
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    
    <div class="categories-collections">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-heading">
                        <div class="line-dec"></div>
                        <h2><em>Login</em></h2>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-4">
                    <form id="contact" action="/login" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <h4 for="email" class="text-center m-2">Email</h4>
                                <input type="email" name="email" id="email" placeholder="guest user: guest@example.com" value="guest@example.com">
                            </div>
                            <div class="col-lg-12">
                                <h4 for="password" class="text-center m-2">Password</h4>
                                <input type="password" name="password" placeholder="guest password: p4ssword" value="p4ssword">
                            </div>
                            <div class="col-lg-12">
                                <button type="submit" class="orange-button">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>

</body>
</html>